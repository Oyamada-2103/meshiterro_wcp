<h2>Log in</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<!--カッコ内を右記（初期生成）から変更２章 form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|-->

  <!--初期生成-->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--初期生成-->
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <!--初期生成-->
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <!--初期生成-->
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>

<% end %>

<!--初期生成-->
<%= render "devise/shared/links" %>
